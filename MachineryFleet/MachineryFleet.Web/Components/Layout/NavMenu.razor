@using MachineryFleet.Web.Components.Shared
@rendermode InteractiveServer

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand logotype" href="#">Machinery Fleet</a>
        <button class="navbar-toggler" type="button" @attributes="NavMenuCssClass">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/machines">Machines</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private Dictionary<string, object> NavMenuCssClass => new Dictionary<string, object>
    {
        { "class", collapseNavMenu ? "collapse" : "" }
    };

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        InvokeAsync(StateHasChanged);
    }
}
